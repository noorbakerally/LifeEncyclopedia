<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" 
    android:padding="2dp">
	
	
     <ScrollView
         	 android:id="@+id/scrollView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
         
        
     <!-- The title -->>   
    <TextView
		    android:id="@+id/title"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center"
		    android:textStyle="bold"
		    android:textAppearance="?android:attr/textAppearanceLarge" />
     <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/seperator" />
    
     <!-- the image -->
     <ImageView
        android:id="@+id/imageLifeObject"
        android:contentDescription="Will contain image of life object"
        android:layout_width="fill_parent"
        android:src="@drawable/loadingbig"
        android:layout_height="200dp"
        />
     
        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/seperator" />
        
      
       <LinearLayout
        android:id="@+id/soundContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

	      <ImageButton
	          
		    android:id="@+id/lifeObjectSound"
		    android:layout_width="40dp"
		    android:layout_height="40dp"
		    android:scaleType="fitXY"
		    android:src="@drawable/sound_icon" />
	   </LinearLayout>
        
        
        
    <!-- Taxonomic Rank -->>    
     <LinearLayout
        android:id="@+id/taxonomicRank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
		<TextView
		    android:id="@+id/taxonomicRankLabel"
		    android:text="@string/taxonomicRankLabel"
		    android:textStyle="bold"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textAppearance="?android:attr/textAppearanceMedium" />
		<TextView
		    android:id="@+id/taxonomicRankValue"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textAppearance="?android:attr/textAppearanceMedium" />
		<View
	            android:layout_width="fill_parent"
	            android:layout_height="@dimen/seperator" />
		<View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/seperator" />
	
    </LinearLayout>
    
     <!-- The  Taxonomic Names -->
    <LinearLayout
        android:id="@+id/taxonomicNameContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
		<View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/seperator" />
	    <TextView
			    android:id="@+id/taxonomicNameLabel"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="Other Taxonomic Details:"
			    android:textStyle="bold"
			    android:textAppearance="?android:attr/textAppearanceMedium" />
			<View
		            android:layout_width="fill_parent"
		            android:layout_height="5dp"
		            android:background="@android:color/darker_gray"/>
	    <LinearLayout
	        android:id="@+id/taxonomicNamesContainer"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical" >
	    </LinearLayout>
		<View
		            android:layout_width="fill_parent"
		            android:layout_height="@dimen/seperator" />
	</LinearLayout>
	
        
         
    <!-- Description -->
    <LinearLayout
        android:id="@+id/descriptionContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
		<TextView
		    android:id="@+id/descriptionLabel"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textAppearance="?android:attr/textAppearanceMedium" />
		<View
	            android:layout_width="fill_parent"
	            android:layout_height="5dp"
	            android:background="@android:color/darker_gray"/>
		<TextView
		    android:id="@+id/descriptionLabelValue"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textAppearance="?android:attr/textAppearanceMedium" />
		<View
	            android:layout_width="fill_parent"
	            android:layout_height="@dimen/seperator" />
	
    </LinearLayout>
    
    
    <!-- The  Scientific Names names -->
    <LinearLayout
        android:id="@+id/scientificContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
	    <TextView
			    android:id="@+id/scientificNamesLabel"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:textAppearance="?android:attr/textAppearanceMedium" />
			<View
		            android:layout_width="fill_parent"
		            android:layout_height="5dp"
		            android:background="@android:color/darker_gray"/>
	    <LinearLayout
	        android:id="@+id/scientificNamesContainer"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical" >
	    </LinearLayout>
		<View
		            android:layout_width="fill_parent"
		            android:layout_height="@dimen/seperator" />
	</LinearLayout>
   
    
    
    <!-- The  common names -->
    <LinearLayout
        android:id="@+id/commonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
	    <TextView
		    android:id="@+id/commonNamesLabel"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    
		    android:textAppearance="?android:attr/textAppearanceMedium" />
		<View
	            android:layout_width="fill_parent"
	            android:layout_height="5dp"
	            android:background="@android:color/darker_gray"/>
	    <LinearLayout
	        android:id="@+id/commonNamesContainer"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical" >
		</LinearLayout>
	    <View
		            android:layout_width="fill_parent"
		            android:layout_height="@dimen/seperator" />
	 </LinearLayout>
    
    
    
    
	<!-- The  direct subclasses names -->
	<LinearLayout
        android:id="@+id/subclassContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
		<TextView
			    android:id="@+id/directSuclassLabel"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    
			    android:textAppearance="?android:attr/textAppearanceMedium" />
			<View
		            android:layout_width="fill_parent"
		            android:layout_height="5dp"
		            android:background="@android:color/darker_gray"/>
		<LinearLayout
		    android:id="@+id/directSubclassesContainer"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical" >
		</LinearLayout>
		<View
		            android:layout_width="fill_parent"
		            android:layout_height="@dimen/seperator" />
	</LinearLayout>
	
	
	
	</LinearLayout>
	</ScrollView>
	
</LinearLayout>